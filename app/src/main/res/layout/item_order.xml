<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="#FFF5F9"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/orderIdText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textColor="#1A1A1A"
                android:textSize="14sp"
                tools:text="Orden #02afe3ef-d525-410e-bb61"/>

            <TextView
                android:id="@+id/orderDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#666666"
                android:textSize="12sp"
                tools:text="Sat Nov 09 21:04:27 GMT 2024"/>
        </LinearLayout>

        <TextView
            android:id="@+id/orderItemsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            tools:text="1× Big Mac\n2× Menu #2"/>

        <TextView
            android:id="@+id/orderTotalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:textColor="#1A1A1A"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            tools:text="$36.92"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>